#!/usr/bin/env perl

use strict;
use warnings;
use Text::Markmoredown 'markmod';

my $file = shift;

    my $content;
    {
        open my $fh, "<", $file or die $!;
        local $/ = undef;
        $content = <$fh>;
        close $fh;
    }

    my $md = markmod($content);

